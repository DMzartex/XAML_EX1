<Window x:Class="XAML_EX1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XAML_EX1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btn_1" VerticalAlignment="Top" Width="80px" HorizontalAlignment="Left" Foreground="Red" Background="White">btn_1</Button>
        <Button x:Name="btn_2" VerticalAlignment="Top" Width="80px" HorizontalAlignment="Right" Foreground="Green" Background="White">btn_1</Button>
        <Button x:Name="btn_3" VerticalAlignment="Bottom" Width="80px" HorizontalAlignment="Left" Foreground="Blue" Background="White">btn_1</Button>
        <Button x:Name="btn_4" VerticalAlignment="Bottom" Width="80px" HorizontalAlignment="Right" Foreground="Purple" Background="White">btn_1</Button>
    </Grid>
</Window>
